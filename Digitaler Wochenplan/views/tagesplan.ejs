        <base href="">
        <link rel="stylesheet" href="/css/grid.css">
    </head>

    <body>
        <%- include('./header.ejs')%>
        <%- include('./nav.ejs')%>
        <main>
            <ul id="tagesplan">
            <%for(var i = 0;i<6;i++){%>
                <%if(Woche[Wochentag][i].Name!=""){%> <!--Nur existierende Aufgaben werden angezeigt, Name required-->
