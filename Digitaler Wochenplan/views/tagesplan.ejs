                <ul>
                    <li>Name:<a href="<%=Woche[Wochentag][i].Link%>"><%=Woche[Wochentag][i].Name%></a></li>
                    <li><%="ErklÃ¤rung:"+Woche[Wochentag][i].Beschreibung%></li>
                    <li><%="Erstellt am:"+Woche[Wochentag][i].Datum%></li>
                </ul>
            <%}}%>
            </ul>
            
        </main>
        <%- include('./aside.ejs')%>
        <%- include('./footer.ejs')%>
    </body>
</html>